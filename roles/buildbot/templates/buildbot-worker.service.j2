[Unit]
Description=Buildbot Worker
Wants=network.target
After=network.target

[Service]
Type=forking
PIDFile=/home/buildbot/worker/twistd.pid
WorkingDirectory=/home/buildbot
ExecStart=/home/buildbot/.local/bin/buildbot-worker start worker
ExecReload=/home/buildbot/.local/bin/buildbot-worker restart worker
ExecStop=/home/buildbot/.local/bin/buildbot-worker stop worker
Restart=always
User=buildbot

[Install]
WantedBy=multi-user.target
